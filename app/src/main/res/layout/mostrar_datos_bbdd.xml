<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <Button
            android:id="@+id/pruebaREST"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="prueba REST"
            app:layout_constraintBottom_toTopOf="@+id/pruebaPOST"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/pruebaPOST"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="prueba POST"
            app:layout_constraintBottom_toTopOf="@+id/pruebaGET"
            app:layout_constraintEnd_toEndOf="@+id/pruebaREST"
            app:layout_constraintStart_toStartOf="@+id/pruebaREST"
            app:layout_constraintTop_toBottomOf="@+id/pruebaREST" />

        <Button
            android:id="@+id/pruebaGET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prueba GET"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/pruebaPOST"
            app:layout_constraintStart_toStartOf="@+id/pruebaPOST"
            app:layout_constraintTop_toBottomOf="@+id/pruebaPOST" />

</androidx.constraintlayout.widget.ConstraintLayout>