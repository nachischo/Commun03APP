<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/OkIcon"
        android:layout_width="148dp"
        android:layout_height="159dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/ResultText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ok_icon" />

    <TextView
        android:id="@+id/ResultText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Aquí aparecerá el resultado de la operación."
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/ReturnButton"
        app:layout_constraintEnd_toEndOf="@+id/OkIcon"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/OkIcon"
        app:layout_constraintTop_toBottomOf="@+id/OkIcon" />

    <Button
        android:id="@+id/ReturnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ResultText"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/ResultText"
        app:layout_constraintTop_toBottomOf="@+id/ResultText" />

    <ImageView
        android:id="@+id/ErrorIcon"
        android:layout_width="147dp"
        android:layout_height="159dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/OkIcon"
        app:layout_constraintEnd_toEndOf="@+id/OkIcon"
        app:layout_constraintStart_toStartOf="@+id/OkIcon"
        app:layout_constraintTop_toTopOf="@+id/OkIcon"
        app:srcCompat="@drawable/cross_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>